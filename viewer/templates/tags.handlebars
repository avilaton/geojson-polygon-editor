
<dl class="dl">
	{{#each tags}}
		<dt>
			<a href="#" class="remove-tag" data-id="{{id}}">
				<i class="icon-trash"></i>
			</a>
			<a href="#" class="edit-tag" data-id="{{id}}">
				<i class="icon-pencil"></i>
			</a>
			{{this.title}}
		</dt>
		<dd>{{this.desc}}</dd>
	{{/each}}
</dl>

